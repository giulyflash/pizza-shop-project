<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<iet:pz-data xmlns:iet="http://pizza.com/IET/2007/12" class="com.pizza.bean.validation.ValidationType">
  <iet:metadata filter=""/>
  

  <iet:collectionValidationType>
    <iet:name>min_num_toppings</iet:name>
    <iet:errorKey>validation.min_num_toppings</iet:errorKey>
    <iet:minSize>1</iet:minSize>
  </iet:collectionValidationType>


  <iet:collectionValidationType>
    <iet:name>max_num_toppings</iet:name>
    <iet:errorKey>validation.max_num_toppings</iet:errorKey>
    <iet:maxSize>5</iet:maxSize>
  </iet:collectionValidationType>

  <iet:requiredValidationType>
    <iet:name>pizza_size_required</iet:name>
    <iet:errorKey>validation.pizza_size_required</iet:errorKey>
  </iet:requiredValidationType>

  <iet:requiredValidationType>
    <iet:name>required</iet:name>
    <iet:errorKey>validation.required</iet:errorKey>
  </iet:requiredValidationType>
  
  <iet:lengthValidationType>
    <iet:regexValidationType>
      <iet:name>street_address</iet:name>
      <iet:errorKey>validation.invalid.streetAddress</iet:errorKey>
      <iet:regexRule>^.+$</iet:regexRule>
    </iet:regexValidationType>
    <iet:maxLength>255</iet:maxLength>
    <iet:minLength>1</iet:minLength>
  </iet:lengthValidationType>

  <iet:lengthValidationType>
    <iet:regexValidationType>
      <iet:name>city</iet:name>
      <iet:errorKey>validation.invalid.city</iet:errorKey>
      <iet:regexRule>^[a-zA-Z]+$</iet:regexRule>
    </iet:regexValidationType>
    <iet:maxLength>255</iet:maxLength>
    <iet:minLength>1</iet:minLength>
  </iet:lengthValidationType>
  
  <iet:lengthValidationType>
    <iet:regexValidationType>
      <iet:name>stateCode</iet:name>
      <iet:errorKey>validation.invalid.stateCode</iet:errorKey>
      <iet:regexRule>^((?i)AK|AL|AR|AZ|CA|CO|CT|DC|DE|FL|GA|HI|IA|ID|IL|IN|KS|KY|LA|MA|MD|ME|MI|MN|MO|MS|MT|NC|ND|NE|NH|NJ|NM|NV|NY|OH|OK|OR|PA|PR|RI|SC|SD|TN|TX|UT|VA|VT|WA|WI|WV|WY)$</iet:regexRule>
    </iet:regexValidationType>
    <iet:maxLength>2</iet:maxLength>
    <iet:minLength>2</iet:minLength>
  </iet:lengthValidationType>

  <iet:lengthValidationType>
    <iet:regexValidationType>
      <iet:name>zipCode</iet:name>
      <iet:errorKey>validation.invalid.zipCode</iet:errorKey>
      <iet:regexRule>^(\d{5})$</iet:regexRule>
    </iet:regexValidationType>
    <iet:maxLength>5</iet:maxLength>
    <iet:minLength>5</iet:minLength>
  </iet:lengthValidationType>
  
 </iet:pz-data>